@model OrderFoodOnline.Models.RegisterViewModel
@{
  ViewData["Title"] = "Đăng Ký";
}
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
      <div>
        <img src="/images/Lemonade_(Lime_version).jpg" class="w-100" />
      </div>
    </div>

    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
      <form autocomplete="off" method="post">
        <div class="mb-3">
          <h2>Đăng Ký</h2>
          <span>Đăng Ký Một Tài Khoản Mới</span>
        </div>
        <div class="mb-3 form-floating">
          @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
          <label for="Name">Name</label>
        </div>
        <div class="mb-3 form-floating">
          @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
          <label for="Address">Address</label>
        </div>
        <div class="mb-3 form-floating">
          @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
          @* <label class="form-label" for="Email">Email</label> *@
          <label for="Email">Email</label>
        </div>
        <div class="mb-3 form-floating">
          @Html.TextBoxFor(m => m.Password, new { @class = "form-control", Type = "password" })
          @* <label class="form-label" for="Password">Password</label> *@
          <label for="Password">Password</label>
        </div>
        <div class="mb-3">
          <button class="btn btn-sm btn-success w-100 p-2" type="submit">Đăng Ký</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
